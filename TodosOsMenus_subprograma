void menu_registo(void){
    system("cls");//limpa o ecrã
    int option_registo;
    printf("====REGISTO MENSAL DE EXERCÍCIO FÍSICO====\n");
    printf("*--------------------------------------------------------------------------*\n");
    printf("|1: Minutos gastos em exercício físico, num determinado dia                |\n");
    printf("|2: Registo diário dos minutos gastos em exercício físico                  |\n");
    printf("|3: Registo mensal                                                         |\n");
    printf("|4: Média diária de exercício físico durante o mês registado               |\n");
    printf("|5: Número de dias de um mês de maior tempo de exercício físico            |\n");
    printf("|6: Dia de máximo tempo de exercício físico                                |\n");
