void menu_principal(void){
    int op;
    printf("====MENU PRINCIPAL====\n");
    printf("*-------------------------------------------*\n");
    printf("|1: Validações numéricas                    |\n");
    printf("|2: Registo Mensal de exercício físico      |\n");
    printf("|3: Sopa de letras                          |\n");
    printf("|4: Registo clínico                         |\n");
    printf("|5: Terminar o programa                     |\n");
    printf("*-------------------------------------------*\n");
    printf("Selecione a opção desejada:");
    scanf("%d", &op);
    while(op!=5){
    switch(op){
        case 1:
            menu_validacoes();
            break;
        case 2:
            menu_registo();
            break;
        case 3:
            menu_sopa();
            break;
        case 4:
            menu_clinico();
            break;
        default:
            system("cls");//limpa o ecrã
            printf("Erro! Por favor, introduza uma opção válida...\n");
            break;
    }
    printf("====MENU PRINCIPAL====\n");
    printf("*-------------------------------------------*\n");
    printf("|1: Validações numéricas                    |\n");
    printf("|2: Registo Mensal de exercício físico      |\n");
    printf("|3: Sopa de letras                          |\n");
    printf("|4: Registo clínico                         |\n");
    printf("|5: Terminar o programa                     |\n");
    printf("*-------------------------------------------*\n");
    printf("Selecione a opção desejada:");
    scanf("%d", &op);
}

}

void menu_validacoes(void){
